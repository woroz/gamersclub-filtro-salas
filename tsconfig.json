{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "**/*.json"
  ]
}
